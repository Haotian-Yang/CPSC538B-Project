{
	"compilerOptions": {
		"outDir": "dist",
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": false,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"noImplicitOverride": true,
		"rootDir": ".",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": false,
		"target": "es5",
		"lib": [
			"dom",
			"es5",
			"scripthost",
			"es2015.promise",
			"es2019"
		],
		"types": [
			"node",
			"mocha"
		]
	},
	"include": [
		"src",
		"test"
	],
	"exclude": [
		"node_modules"
	]
}
